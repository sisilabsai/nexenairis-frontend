      "url": "/mobile-scan",
      "icons": [
        {
          "src": "/icons/scanner-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory",
      "short_name": "Inventory",
      "description": "Manage inventory and products",
      "url": "/inventory",
      "icons": [
        {
          "src": "/icons/inventory-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View business analytics and reports",
      "url": "/analytics",
      "icons": [
